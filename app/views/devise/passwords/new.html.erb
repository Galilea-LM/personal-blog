<div class="full-width-container has-backgroud-image">
  <div class="has-text-centered panel has-shadow sign-in ">
    <p class="is-size-2-desktop is-size-3-mobile text green">Forgot your password?</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="field">
        <div class="control">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>
      </div>


      <%= f.submit "Send me instructions", class:"button is-success" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
